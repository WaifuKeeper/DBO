CREATE TABLE Students(
StudentId int not null CONSTRAINT KEY_STUDENT_ID PRIMARY KEY,
SURNAME char(25) not null,
NAME char(20) not null,
Stipend int not null,
KURS int not null,
CITY char(15) not null,
Birth_date date not null,
UNIV_ID int not null
);

CREATE TABLE STUDENT(
STUDENT_ID INTEGER NOT NULL,
SURNAME CHAR (25) NOT NULL,
NAME CHAR (10) NOT NULL,
STIPEND INTEGER,
KURS INTEGER,
CITY CHAR (15),
BIRTHDAY DATE,
UNIV_ID INTEGER,
CONSTRAINT KEY_STUDENT_ID_KURS PRIMARY KEY (STUDENT_ID, KURS)
);
ALTER TABLE STUDENT
add spec char(30)
